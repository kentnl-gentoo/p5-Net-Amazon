#!/usr/bin/perl
###########################################
use warnings;
use strict;

use Net::Amazon;

my $ua = Net::Amazon->new(
    token       => $ENV{AMAZON_TOKEN},
    secret_key  => $ENV{AMAZON_SECRET_KEY},
    locale      => 'de',
);

my $resp = $ua->search(
    asin  => "3827313783",
);

if($resp->is_success()) {
    print $resp->as_string(), "\n";
} else {
    print "Error: ", 
          $resp->message(), "\n";
}
